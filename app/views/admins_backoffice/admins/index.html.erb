<h1>Lista de Admins</h1>
<div class="row"><div class="col-sm-12">
  <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                                    <thead>
                                        <tr role="row">
                                        <th class="sorting sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 57.0057px;">ID</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 61.0057px;">Email</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 61.0057px;">Ações</th>

                                    </thead>
                                    <tfoot>
                                        <tr>
                                        <th rowspan="1" colspan="1">ID</th>
                                        <th rowspan="1" colspan="1">Email</th>
                                        <th rowspan="1" colspan="1">Ações</th>
                          
                                    </tfoot>
                                    <tbody>
                                    <% @admins.each do  |admin|%>
                                     <tr class="odd">
                                            <td class="sorting_1"><%= admin.id %></td>
                                            <td><%= admin.email %></td>
                                            <td style="width: 10%">
                                            <a href="#" class="btn btn-primary btn-circle btn-sm">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a href="#" class="btn btn-danger btn-circle btn-sm">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                            
                                            </td>
                                            
                                        </tr>
                                        <% end %>
                                        
                                        </tbody>
                                </table></div></div>

